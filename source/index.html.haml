.multiplePointerContainer__pointer.fitness-content
  .title
    %h1.yellow-text-color Desaf&iacute;os
  = partial "patterns/flexboxes"

-# Sección: Ayúdanos a hacer historia
.multiplePointerContainer__pointer.light-gray-background.historia
  .title
    %h1.red-text-color Ayúdanos a hacer historia
  = partial "patterns/flexboxes-no-background"
